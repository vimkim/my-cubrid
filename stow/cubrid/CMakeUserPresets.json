{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "mydebug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_preset_mydebug",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "WITH_CCI": "true",
        "CMAKE_INSTALL_PREFIX": "install.out/mydebug",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_FLAGS": "-Wno-non-pod-varargs -Wno-c++11-narrowing"
      }
    },
    {
      "name": "myprofile",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_preset_myprofile",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Profile",
        "WITH_CCI": "true",
        "CMAKE_INSTALL_PREFIX": "install.out/myprofile",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "mydebug",
      "configurePreset": "mydebug"
    },
    {
      "name": "myprofile",
      "configurePreset": "myprofile"
    }
  ]
}
