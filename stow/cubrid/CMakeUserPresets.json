{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "mydebug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_preset_mydebug",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "WITH_CCI": "true",
        "CMAKE_INSTALL_PREFIX": "install.out/mydebug",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_C_FLAGS_DEBUG": "-O0 -ggdb3",
        "CMAKE_CXX_FLAGS_DEBUG": "-O0 -ggdb3"
      }
    },
    {
      "name": "mydebug-clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_preset_mydebug",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "WITH_CCI": "true",
        "CMAKE_INSTALL_PREFIX": "install.out/mydebug",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_C_FLAGS": "-O0 -w -flto=thin -fno-inline -Xclang -fno-validate-pch -Xclang -fno-pch-timestamp -Wno-everything -Wno-non-pod-varargs -Wno-c++11-narrowing -Wno-int-conversion -Wno-implicit-function-declaration -w",
        "CMAKE_CXX_FLAGS": "-O0 -w -flto=thin -fno-inline -Xclang -fno-validate-pch -Xclang -fno-pch-timestamp -Wno-everything -Wno-non-pod-varargs -Wno-c++11-narrowing -Wno-int-conversion -Wno-implicit-function-declaration -w",
        "CMAKE_C_FLAGS_DEBUG": "-O0",
        "CMAKE_CXX_FLAGS_DEBUG": "-O0"
      }
    },
    {
      "name": "myprofile",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_preset_myprofile",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Profile",
        "WITH_CCI": "true",
        "CMAKE_INSTALL_PREFIX": "install.out/myprofile",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_C_FLAGS_DEBUG": "-O0 -ggdb3",
        "CMAKE_CXX_FLAGS_DEBUG": "-O0 -ggdb3"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "mydebug",
      "configurePreset": "mydebug",
      "jobs": 160
    },
    {
      "name": "myprofile",
      "configurePreset": "myprofile"
    }
  ]
}
